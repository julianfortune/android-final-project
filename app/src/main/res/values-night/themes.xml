<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="Theme.CocktailApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_700</item>
        <item name="colorPrimaryVariant">@color/amber_700_lighter</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_700</item>
        <item name="colorSecondaryVariant">@color/amber_700_lighter</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/PlainActionBarDark</item>
    </style>

</resources>